<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="epugaS1.Views.vInicio"
             Title="vInicio">
    <ScrollView>
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="TALLER USO DE IMAGENES"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Red"
            FontSize="20"
            />
        <Label Text="Imagen desde la pagina web"
               HorizontalTextAlignment="Start"/>
        <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2023/03/MENU-WEB-3-1536x388.jpg" 
               WidthRequest="200"
               HeightRequest="200"/>

        <Label Text="Imagen desde archivo"
       HorizontalTextAlignment="Start"/>

        <Image Source="images.png"
       WidthRequest="200"
       HeightRequest="200"/>


    </VerticalStackLayout>
    </ScrollView>
</ContentPage>